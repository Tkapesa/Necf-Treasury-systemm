# =================================
# DATABASE CONFIGURATION
# =================================
# PostgreSQL database connection
DATABASE_URL=postgresql://postgres:password@localhost:5432/church_treasury
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=church_treasury

# =================================
# API CONFIGURATION
# =================================
# FastAPI application settings
API_V1_STR=/api/v1
PROJECT_NAME=Church Treasury
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =================================
# SECURITY CONFIGURATION
# =================================
# JWT token settings - CHANGE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================================
# FILE STORAGE CONFIGURATION  
# =================================
# Local storage settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# S3 compatible storage (optional)
USE_S3_STORAGE=false
S3_BUCKET_NAME=church-treasury-files
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1
S3_ENDPOINT_URL=https://s3.amazonaws.com

# =================================
# EXTERNAL SERVICES
# =================================
# OCR Service settings
OCR_ENABLED=true
OCR_API_KEY=your-ocr-api-key

# Email settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password

# =================================
# DEVELOPMENT SETTINGS
# =================================
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development

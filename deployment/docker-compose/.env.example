# Production Environment Variables
# Copy this file to .env and fill in your actual values

# ==============================================
# SECURITY SETTINGS (CRITICAL - CHANGE THESE!)
# ==============================================

# Strong secret key for JWT tokens and encryption
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-immediately

# Database credentials
POSTGRES_DB=necf_treasury
POSTGRES_USER=necf_user
POSTGRES_PASSWORD=your-strong-database-password

# Redis password
REDIS_PASSWORD=your-redis-password

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment setting
ENVIRONMENT=production
LOG_LEVEL=INFO

# Version tags for images
BACKEND_VERSION=latest
FRONTEND_VERSION=latest

# Frontend API URL
REACT_APP_API_URL=https://api.necftreasury.org

# CORS origins (your domain)
CORS_ORIGINS=https://necftreasury.org,https://www.necftreasury.org

# ==============================================
# STORAGE CONFIGURATION
# ==============================================

# Storage type: 's3' or 'local'
STORAGE_TYPE=s3
STORAGE_BUCKET=necf-treasury-receipts
STORAGE_REGION=us-east-1

# AWS S3 credentials
STORAGE_ACCESS_KEY=your-aws-access-key
STORAGE_SECRET_KEY=your-aws-secret-key

# For S3-compatible storage (DigitalOcean Spaces, etc.)
# STORAGE_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@necftreasury.org

# ==============================================
# SECURITY SETTINGS
# ==============================================

# JWT token expiry (hours)
JWT_EXPIRY_HOURS=24

# Password requirements
PASSWORD_MIN_LENGTH=8

# ==============================================
# BACKUP CONFIGURATION
# ==============================================

# Backup retention period (days)
BACKUP_RETENTION_DAYS=30

# S3 bucket for backups
S3_BACKUP_BUCKET=necf-treasury-backups
BACKUP_ACCESS_KEY=your-backup-access-key
BACKUP_SECRET_KEY=your-backup-secret-key

# ==============================================
# MONITORING CONFIGURATION
# ==============================================

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# ==============================================
# PDF GENERATION SETTINGS
# ==============================================

# PDF cache TTL (seconds)
PDF_CACHE_TTL=3600

# Maximum PDF size (MB)
PDF_MAX_SIZE_MB=50

# ==============================================
# RATE LIMITING
# ==============================================

# API rate limits (requests per minute)
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=100
RATE_LIMIT_UPLOAD=10

# ==============================================
# DATABASE OPTIMIZATION
# ==============================================

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ==============================================
# DEVELOPMENT/DEBUG SETTINGS
# ==============================================

# Set to 'true' only for development/staging
DEBUG=false
ENABLE_SWAGGER=false

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================

# SSL certificate paths (if using file-based certificates)
SSL_CERT_PATH=/etc/ssl/certs/necftreasury.org.crt
SSL_KEY_PATH=/etc/ssl/private/necftreasury.org.key

# Let's Encrypt email for certificate generation
LETSENCRYPT_EMAIL=admin@necftreasury.org

# ==============================================
# ADDITIONAL SECURITY HEADERS
# ==============================================

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"

# ==============================================
# LOGGING AND MONITORING
# ==============================================

# Log retention period (days)
LOG_RETENTION_DAYS=90

# Enable application metrics
ENABLE_METRICS=true

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn

# ==============================================
# CLEANUP AND MAINTENANCE
# ==============================================

# Temporary file cleanup interval (hours)
CLEANUP_INTERVAL_HOURS=24

# Session cleanup interval (hours)
SESSION_CLEANUP_HOURS=6
